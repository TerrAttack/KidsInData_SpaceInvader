<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/module_navigation"
    app:startDestination="@id/dataJourneyFragment">

    <fragment
        android:id="@+id/dataJourneyFragment"
        android:name="com.example.kidsindata_spaceinvader.ui.data_journey.DataJourneyFragment"
        android:label="fragment_data_journey"
        tools:layout="@layout/fragment_data_journey" >
        <action
            android:id="@+id/action_dataJourneyFragment_to_moduleFragment"
            app:destination="@id/moduleFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"/>
        <action
            android:id="@+id/action_dataJourneyFragment_to_workingWithDataFragment"
            app:destination="@id/workingWithDataFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"/>
        <action
            android:id="@+id/action_dataJourneyFragment_to_barChartModule"
            app:destination="@id/barChartModule"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"/>
        <action
            android:id="@+id/action_dataJourneyFragment_to_lineChartFragment"
            app:destination="@id/lineChartFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/moduleFragment"
        android:name="com.example.kidsindata_spaceinvader.ui.data_journey.modules.WhatIsDataFragment"
        android:label="fragment_module"
        tools:layout="@layout/fragment_what_is_data_module" >
        <action
            android:id="@+id/action_moduleFragment_to_dataJourneyFragment"
            app:destination="@id/dataJourneyFragment"
            app:enterAnim="@anim/slide_from_left"
            app:exitAnim="@anim/slide_to_right"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/workingWithDataFragment"
        android:name="com.example.kidsindata_spaceinvader.ui.data_journey.modules.WorkingWithDataFragment"
        android:label="fragment_working_with_data"
        tools:layout="@layout/fragment_working_with_data_module">
        <action
            android:id="@+id/action_workingWithDataFragment_to_dataJourneyFragment"
            app:destination="@id/dataJourneyFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/barChartModule"
        android:name="com.example.kidsindata_spaceinvader.ui.data_journey.modules.BarChartFragment"
        android:label="fragment_bar_chart_module"
        tools:layout="@layout/fragment_bar_chart_module" >
        <action
            android:id="@+id/action_barChartModule_to_dataJourneyFragment"
            app:destination="@id/dataJourneyFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/lineChartFragment"
        android:name="com.example.kidsindata_spaceinvader.ui.data_journey.modules.LineChartFragment"
        android:label="fragment_line_chart_module"
        tools:layout="@layout/fragment_line_chart_module" >
        <action
            android:id="@+id/action_lineChartFragment_to_dataJourneyFragment"
            app:destination="@id/dataJourneyFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
    </fragment>
</navigation>