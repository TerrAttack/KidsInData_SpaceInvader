<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kidsindata_spaceinvader.ui.login.create_user.AvatarFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.kofigyan.stateprogressbar.StateProgressBar
                android:id="@+id/progressBarSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:spb_animateToCurrentProgressState="true"
                app:spb_checkStateCompleted="true"
                app:spb_currentStateDescriptionColor="#79C5C7"
                app:spb_currentStateNumber="one"
                app:spb_maxStateNumber="three"
                app:spb_stateBackgroundColor="#BDBDBD"
                app:spb_stateDescriptionColor="#BDBDBD"
                app:spb_stateForegroundColor="#79C5C7"
                app:spb_stateNumberBackgroundColor="#FFFFFF"
                app:spb_stateNumberForegroundColor="#eeeeee" />

            <Button
                android:id="@+id/nextAvatarBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTintMode="@color/white"
                android:text="@string/next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/pick_avatar"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBarSignUp" />

            <ImageView
                android:id="@+id/avatar_1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:padding="3dp"
                app:layout_constraintEnd_toStartOf="@+id/avatar_2"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/avatar_1" />

            <ImageView
                android:id="@+id/avatar_2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/spiderman_border"
                android:padding="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/avatar_2" />

            <ImageView
                android:id="@+id/avatar_3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                app:layout_constraintStart_toEndOf="@+id/avatar_2"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/avatar_3" />

            <ImageView
                android:id="@+id/avatar_4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:padding="3dp"
                app:layout_constraintEnd_toStartOf="@+id/avatar_5"
                app:layout_constraintTop_toBottomOf="@+id/avatar_1"
                app:srcCompat="@drawable/avatar_4" />

            <ImageView
                android:id="@+id/avatar_5"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:padding="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/avatar_2"
                app:srcCompat="@drawable/avatar_5" />

            <ImageView
                android:id="@+id/avatar_6"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:padding="3dp"
                app:layout_constraintStart_toEndOf="@+id/avatar_5"
                app:layout_constraintTop_toBottomOf="@+id/avatar_3"
                app:srcCompat="@drawable/avatar_6" />

            <ImageView
                android:id="@+id/avatar_8"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:padding="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/avatar_5"
                app:srcCompat="@drawable/avatar_8" />

            <ImageView
                android:id="@+id/avatar_7"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:padding="3dp"
                app:layout_constraintEnd_toStartOf="@+id/avatar_8"
                app:layout_constraintTop_toBottomOf="@+id/avatar_4"
                app:srcCompat="@drawable/avatar_7" />

            <ImageView
                android:id="@+id/avatar_9"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:padding="3dp"
                app:layout_constraintStart_toEndOf="@+id/avatar_8"
                app:layout_constraintTop_toBottomOf="@+id/avatar_6"
                app:srcCompat="@drawable/avatar_9" />

            <TextView
                android:id="@+id/existingUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/existing_user"
                android:textColor="@color/titleKidsInData"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>